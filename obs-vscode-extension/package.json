{
    "name": "obsidian",
    "displayName": "language-obsidian",
    "description": "support for Obsidian language.",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.35.0"
    },
    "main": "./out/extension.js",
    "activationEvents": [
        "onLanguage:obs",
        "onCommand:extension.compileObsidian"
    ],
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^10.12.21",
        "tslint": "^5.12.1",
        "typescript": "^3.3.1",
        "vscode": "^1.1.34"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "obs",
                "aliases": [
                    "Obsidian",
                    "obs"
                ],
                "extensions": [
                    ".obs",
                    ".obsidian"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "obs",
                "scopeName": "source.obs",
                "path": "./syntaxes/obs.tmLanguage.json"
            }
        ],
        "taskDefinitions": [
            {
                "type": "obsidian-compile",
                "required": [
                    "file"
                ],
                "properties": {
                    "file": {
                        "type": "string",
                        "description": "The Obsidian file to be compiled."
                    }
                }
            }
        ],
        "commands": [
            {
                "command": "extension.compileObsidian",
                "title": "Obsidian: Compile file"
            }
        ],
        "problemMatchers": [
            {
                "name": "obsidian",
                "owner": "obs",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^(.*) (\\d+).(\\d+):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "message": 5
                }
            }
        ]
    },
    "dependencies": {
        "child_process": "^1.0.2"
    }
}
